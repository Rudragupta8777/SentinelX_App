<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7CB385"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Mobile"
        android:textColor="#333333"
        android:textSize="14sp"
        android:alpha="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCallName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Unknown"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabel" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="+91 00000 00000"
        android:textColor="#EFEFEF"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCallName" />

    <FrameLayout
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="16dp">

        <TextView
            android:id="@+id/tvCallStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calling..."
            android:textColor="#333333"
            android:textSize="18sp"
            android:visibility="visible" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/bg_pill_timer"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:visibility="gone" />
    </FrameLayout>

    <GridLayout
        android:id="@+id/gridActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:columnCount="3"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        app:layout_constraintBottom_toTopOf="@id/btnEndCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout android:layout_width="90dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_margin="12dp">
            <ImageView android:id="@+id/btnMute" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_mute" android:padding="18dp" android:background="@drawable/bg_circle_action_btn" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Mute" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="90dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_margin="12dp">
            <ImageView android:id="@+id/btnKeypad" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_keypad" android:padding="18dp" android:background="@drawable/bg_circle_action_btn" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Keypad" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="90dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_margin="12dp">
            <ImageView android:id="@+id/btnSpeaker" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_speaker" android:padding="18dp" android:background="@drawable/bg_circle_action_btn" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Speaker" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="90dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_margin="12dp">
            <ImageView android:id="@+id/btnRecord" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_record" android:padding="18dp" android:background="@drawable/bg_circle_action_btn" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Record" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="90dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_margin="12dp">
            <ImageView android:id="@+id/btnHold" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_hold" android:padding="18dp" android:background="@drawable/bg_circle_action_btn" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Hold" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="90dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_margin="12dp">
            <ImageView android:id="@+id/btnAddCall" android:layout_width="64dp" android:layout_height="64dp" android:src="@android:drawable/ic_input_add" android:padding="18dp" android:background="@drawable/bg_circle_action_btn" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Add Call" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>

    </GridLayout>

    <ImageButton
        android:id="@+id/btnEndCall"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/bg_pill_red"
        android:src="@drawable/ic_call_end"
        android:scaleType="centerInside"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>