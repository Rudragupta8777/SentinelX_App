<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFEB"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp">

    <View
        android:id="@+id/ivAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_circle_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvInitials"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/ivAvatar"
        app:layout_constraintEnd_toEndOf="@id/ivAvatar"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"/>

    <ImageView
        android:id="@+id/ivUnknownUser"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_person"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/ivAvatar"
        app:layout_constraintEnd_toEndOf="@id/ivAvatar"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ruchit Gupta VIT"
        android:textColor="#121212"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintEnd_toStartOf="@id/btnCallAction"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        app:layout_constraintBottom_toTopOf="@id/tvInfo"
        app:layout_constraintVertical_chainStyle="packed"/>

    <ImageView
        android:id="@+id/ivCallType"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@android:drawable/arrow_up_float"
        app:tint="#FF8A65"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="mobile"
        android:textColor="#444444"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@id/ivCallType"
        app:layout_constraintEnd_toStartOf="@id/btnCallAction"
        app:layout_constraintTop_toTopOf="@id/ivCallType"
        app:layout_constraintBottom_toBottomOf="@id/ivCallType"/>

    <ImageView
        android:id="@+id/btnCallAction"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_call"
        app:tint="#FF8A65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>