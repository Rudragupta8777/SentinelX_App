<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/retro_black"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/retro_white"/>
                    <corners android:radius="8dp"/>
                    <stroke android:width="2dp" android:color="@color/retro_black"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/retro_black"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <item android:bottom="8dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/retro_white"/>
                    <corners android:radius="8dp"/>
                    <stroke android:width="2dp" android:color="@color/retro_black"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>